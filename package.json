{
  "name": "@iaat/chatbot",
  "version": "1.0.2",
  "description": "Chatbot application for Open WebUI",
  "main": "dist/js/chatbot.min.js",
  "files": [
    "dist"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:js": "jest",
    "doc": "typedoc --out docs src/js/chatbot.ts",
    "type:js": "tsc --noEmit",
    "lint:js": "eslint --fix src/js/",
    "minify:css": "postcss src/css/chatbot.css -o dist/css/chatbot.min.css --use autoprefixer cssnano --map",
    "build:js": "esbuild src/js/chatbot.ts --target=es2015 --bundle --minify --sourcemap --outfile=dist/js/chatbot.min.js",
    "build": "npm run test:js && npm run lint:js && rm -rf dist && mkdir -p dist/js dist/css && npm run build:js && npm run minify:css",
    "dist": "npm run build"
  },
  "keywords": [
    "chatbot",
    "webui",
    "openai"
  ],
  "author": "mobo",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.4",
    "esbuild": "^0.25.8",
    "esbuild-jest": "^0.5.0",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss-cli": "^11.0.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "marked": "^16.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.[tj]s$": "esbuild-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!marked|dompurify)/"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
